{
    "name": "mediathekview/flapi",
    "license": "GPL-3.0",
    "description": "FilmListe-API fuer MediathekView",
    "require": {
        "php": ">=5.5.0",
        "slim/slim": "^3.1",
        "slim/php-view": "^2.0",
        "monolog/monolog": "^1.17",
        "illuminate/database": "~5.1",
        "vlucas/phpdotenv": "~2.3"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },
    "autoload": {
        "psr-4": {
            "FLAPI\\": "src/FLAPI/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": "php -S 0.0.0.0:8080 -t public public/index.php",
        "test": "phpunit",
        "rest-docs": "apidoc -i src/FLAPI/ -o docs/rest/ -c ./"
    }
}
